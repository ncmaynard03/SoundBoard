<Window x:Class="SoundBoardWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundBoardWindow"
        mc:Ignorable="d"
        Title="SoundBoard" Height="500" Width="300" MaxHeight="500" MaxWidth="300" MinHeight="250" MinWidth="150">
    <Grid>
	    
		<Menu Padding="5" HorizontalAlignment="Center" VerticalAlignment="Top" >
            <MenuItem Name="File" >
                <MenuItem.Header>
                    <Image Source="/Icons/Folder.ico" Stretch="UniformToFill" Height="35"></Image>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Name="Library" >
                <MenuItem.Header>
                    <Image Source="/Icons/Book.ico" Stretch="UniformToFill" Height="35"></Image>
                </MenuItem.Header >
            </MenuItem>

            <MenuItem Name="Add" Click="AddSound" >
                <MenuItem.Header>
                    <Image Source="/Icons/plus.ico" Height="35"></Image>
                </MenuItem.Header>
            </MenuItem>

        </Menu>
    </Grid>
</Window>
