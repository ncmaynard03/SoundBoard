<Window x:Class="SoundBoardWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundBoardWindow"
        mc:Ignorable="d"
        Title="SoundBoard" Height="500" Width="300" MaxHeight="700" MaxWidth="500" MinHeight="250" MinWidth="180">
    <Window.CommandBindings>
        <CommandBinding Command="Play" CanExecute="CommandBindingPlay_CanExecute" Executed="CommandBindingPlay_Executed" />
    </Window.CommandBindings>
    <Grid>
        <Grid.InputBindings>
            <KeyBinding Key="Space" Modifiers="Ctrl" Command="Play"/>
        </Grid.InputBindings>
	    
		<Menu Padding="5" HorizontalAlignment="Center" VerticalAlignment="Top" >
            <MenuItem Name="File" >
                <MenuItem.Header>
                    <Image Source="/Icons/user-home.ico" Stretch="UniformToFill" Height="35"></Image>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Name="Library" >
                <MenuItem.Header>
                    <Image Source="/Icons/Book.ico" Stretch="UniformToFill" Height="35"></Image>
                </MenuItem.Header >
            </MenuItem>

            <MenuItem Name="Add" Click="AddSound" >
                <MenuItem.Header>
                    <Image Source="/Icons/plus.ico" Height="35"></Image>
                </MenuItem.Header>
            </MenuItem>
        </Menu>

        <Button x:Name="PlayButton" Command="Play" Grid.Column="1" Grid.Row="1" Width="40" Height="40">
        </Button>
    </Grid>
</Window>
